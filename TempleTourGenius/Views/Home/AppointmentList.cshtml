@{
    ViewData["Title"] = "Appointment List";
}

@model List<Tour>


<table class="table table-bordered table-striped">

    <thead class="font-weight-bold">
        <tr>
            <td>Group Name</td>
            <td>Group Size</td>
            <td>Email</td>
            <td>Phone Number</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>

    </thead>

        <tbody>
            @foreach (var x in Model)
                {
            <tr>
                <td>@x.GroupName</td>
                <td>@x.GroupSize</td>
                <td>@x.Email</td>
                <td>@x.Phone</td>
                <td><a class="btn btn-warning btn-sm">Edit</a></td> @*Austin, you can add in your functions to connect to these buttons and then I think we're good to go!'*@
                <td><a  class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Confirm_Delete">Delete</a></td>
            </tr>
                }

        </tbody>

</table>
