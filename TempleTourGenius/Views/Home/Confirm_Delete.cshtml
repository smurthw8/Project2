@{
    ViewData["Title"] = "Confirm Delete";
}

@model TempleTourGenius.Models.Tour


<h1 class="text-center">Confirm appointment cancellation</h1>
<h3 class="text-center">Are you sure you want to remove the appointment for @Model.GroupName?</h3>
<br />

<form method="post" style="text-align: center;" asp-controller="Home" asp-action="Confirm_Delete">
    <button class="btn btn-lg btn-outline-secondary" type="submit">Delete Appointment</button>
    <a class="btn btn-lg btn-primary" asp-controller="Home" asp-action="AppointmentList">Cancel</a>

    <input type="hidden" asp-for="TourId" />
    <input type="hidden" asp-for="TimeId" />
</form>